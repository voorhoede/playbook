.theme-container.sidebar-open .navbar {
  background-color: bg-pastel
}

.theme-container .navbar {
  background-color: bg-pastel
  border-color: #eee
}

.theme-container.no-sidebar .navbar {
  border-color: #eee
}

.navbar .site-name {
  color: blue
  margin-left: spacing-half
}

.navbar .links {
  background-color: transparent
}

.navbar .sidebar-button:after {
  content: ''
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  background-image: url('/icon_menu-passive--white.svg')
  background-size: 70% 70%
  background-position: center
  background-repeat: no-repeat
}

.sidebar-button {
  background-color: blue
}

.sidebar-button svg path {
  fill: white
}

.sidebar-open .navbar .sidebar-button:after {
  background-image: url('/icon_menu-exit--white.svg')
}

.sidebar-button svg {
  display: none
}

@media (min-width: 720px) {
  .theme-container:not(.no-sidebar) .navbar {
    background-color: white
    border: none
  }

  .theme-container.no-sidebar .navbar {
    background-color: transparent
  }

  .home-link {
    width: 16.4rem
    height: 100%
    background-color: bg-pastel
  }

  .navbar {
    padding: 0
  }

  .navbar .site-name {
    margin: .4rem 2rem
    padding-left: 35px
    position: relative
  }

  .navbar .site-name:before {
    height: 30px
    width: 30px
    background-image: url('/logo.svg')
    background-size: contain
    background-repeat: no-repeat
    background-position: center
    position: absolute
    content: ''
    top: calc(50% - 15px)
    left: -5px
  }

  .navbar .site-name:after {
    position: absolute
    content: 'by De Voorhoede'
    bottom: -50%
    right: 0
    text-align: right
    font-size: 11px
    font-style: italic
    width: 100%
    font-weight: 400
  }

  .theme-container .navbar {
    background-color: white
  }

  .theme-container:not(.no-sidebar) .links {
    max-width: 100%
    width: max-width-medium
    padding-bottom: .7rem
    padding-left: 0
    display: flex
    justify-content: flex-end
    border-bottom: 1px solid #ddd
    background-color: transparent
  }
}

@media (min-width: 960px) {
  .theme-container:not(.no-sidebar) .links {
    width: max-width-large
  }
}
