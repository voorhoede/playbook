.theme-container.sidebar-open .navbar {
  background-color: bgPastel;
}

.theme-container .navbar {
  background-color: bgPastel;
  border-color: border-color;
}

.navbar .site-name {
  margin-left: spacingHalf;
  color: blue;
}

.navbar .links {
  background-color: transparent;
}

.navbar .sidebar-button {
  background-color: blue;
}

.sidebar-button svg,
.sidebar-button .icon {
  display: none;
}

.navbar .sidebar-button:after {
  position: absolute;
  content: '';
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: url('/icon_menu-passive--white.svg');
  background-size: 70% 70%;
  background-position: center;
  background-repeat: no-repeat;
}

.sidebar-open .navbar .sidebar-button:after {
  background-image: url('/icon_menu-exit--white.svg');
}

@media (min-width: 720px) {
  .theme-container:not(.no-sidebar) .navbar {
    background-color: white;
    border: none;
  }

  .theme-container.no-sidebar .navbar {
    background-color: transparent;
  }

  .home-link {
    width: 16.4rem;
    height: 100%;
    background-color: bgPastel;
  }

  .navbar {
    padding: 0;
  }

  .navbar .site-name {
    position: relative;
    margin: .4rem spacingDouble;
    padding-left: spacingDouble;
  }

  .navbar .site-name:before {
    content: '';
    position: absolute;
    top: calc(50% - 15px);
    left: -5px;
    width: 30px;
    height: 30px;
    background-image: url('/logo.svg');
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
  }

  .navbar .site-name:after {
    position: absolute;
    content: 'by De Voorhoede';
    bottom: -50%;
    right: 0;
    text-align: right;
    font-size: 11px;
    font-style: italic;
    width: 100%;
    font-weight: 400;
  }

  .theme-container .navbar {
    background-color: white;
  }

  .theme-container:not(.no-sidebar) .links {
    display: flex;
    justify-content: flex-end;
    padding-bottom: .7rem;
    padding-left: 0;
    width: maxWidthMedium;
    border-bottom: 1px solid border-color;
    background-color: transparent;
  }
}

@media (min-width: 960px) {
  .theme-container:not(.no-sidebar) .links {
    width: maxWidthLarge;
  }

  .home-link {
    width: 20rem;
    height: 100%;
    background-color: bgPastel;
  }
}
