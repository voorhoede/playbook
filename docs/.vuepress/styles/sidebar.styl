.sidebar {
  box-sizing: border-box
}

.sidebar-button {
  background-color: blue
}

.sidebar-button svg path {
  fill: white
}

.sidebar .nav-links {
  border-bottom-color: white
}

.theme-container .sidebar {
  background-color: bg-pastel
  border: none
}

a.sidebar-link {
  color: blue
  padding: spacing-half 1.5rem
}

@media (max-width: 719px) {
  .theme-container .sidebar {
    transform: translateY(-100%)
    background-color: bg-pastel
    width: 100%
    height: 100%
    z-index: 15
    font-size: 1.2rem;
  }

  .theme-container.sidebar-open .sidebar {
    transform: translateY(0)
  }
}

@media (min-width: 720px) {
  .sidebar-link:hover {
    font-weight: 700
  }
}
