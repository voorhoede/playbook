.theme-container .sidebar {
  background-color: bg-pastel
  border: 2px solid bg-pastel
  box-sizing: border-box
}

.sidebar-heading {
  color: blue
  margin-bottom: spacing-default
}

.sidebar-heading span {
  position: relative
}

.sidebar-heading span:after {
  width: 0%
  height 100%
  position:absolute
  left: 0
  bottom: -7px
  content: ''
  border-bottom: 2px solid brand-color
}

.sidebar-heading:hover span:after {
  transition: all .4s ease
  width: 100%
}

.sidebar .sidebar-links {
  color: blue
}

a.sidebar-link {
  color: blue
  padding: spacing-half spacing-medium
}

@media (max-width: 719px) {
  .theme-container .sidebar {
    transform: translateY(-100%)
    background-color: bg-pastel
    width: 100%
    height: 100%
    z-index: 15
    font-size: 1.2rem
  }

  .theme-container.sidebar-open .sidebar {
    transform: translateY(0)
  }
}

@media (min-width: 720px) {
  .sidebar-link:hover {
    font-weight: 700
  }
}
