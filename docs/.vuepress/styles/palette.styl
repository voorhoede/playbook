@import fonts
@import variables
@import home
@import search-box
@import sidebar
@import navbar

body {
  font-family: 'apercu', Arial, sans-serif !important
  margin: 0
}

.theme-container .navbar,
.theme-container.no-sidebar .navbar {
  background-color: brand-color
  border: none
}

.navbar .site-name {
  color: blue
  margin-left: spacing-half
}

.navbar .links {
  background-color: transparent
}

@media (min-width: 720px) {
  .home-link {
    width: 16.4rem
    height: 100%
    background-color: bg-pastel
  }

  .navbar {
    padding: 0
  }

  .navbar .site-name {
    margin: .4rem 2rem
    padding-left: 35px
    position: relative
  }

  .navbar .site-name:before {
    height: 30px
    width: 30px
    background-image: url('/logo.svg')
    background-size: contain
    background-repeat: no-repeat
    background-position: center
    position: absolute
    content: ''
    top: calc(50% - 15px)
    left: -5px
  }

  .navbar .site-name:after {
    position: absolute
    content: 'by De Voorhoede'
    bottom: -50%
    right: 0
    text-align: right
    font-size: 11px
    font-style: italic
    width: 100%
    font-weight: 400
  }

  .theme-container .navbar {
    background-color: white
  }

  .theme-container:not(.no-sidebar) .nav-link {
    color: #222222
  }

  .theme-container:not(.no-sidebar) .links {
    max-width: 100%
    width: max-width-medium
    padding-bottom: .7rem
    padding-left: 0
    display: flex
    justify-content: flex-end
    border-bottom: 1px solid #ddd
    background-color: transparent
  }

  .page-nav {
    position: fixed
    bottom: 0
    right: 0
    background-color: white
    width: max-width-medium
    padding-bottom: spacing-half
  }
}

@media (min-width: 960px) {
  .theme-container:not(.no-sidebar) .links {
    width: max-width-large
  }

  .home-link {
    width: 20rem
    height: 100%
    background-color: bg-pastel
  }

  .page-edit, .page-nav {
    max-width: max-width-large
  }

  .page-nav {
    width: max-width-large
  }

  .page-nav .inner {
    margin: 0 auto
  }
}

