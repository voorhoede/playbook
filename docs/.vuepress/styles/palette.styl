@import fonts
@import variables
@import content
@import home
@import search-box
@import sidebar
@import navbar
@import page-navigation

body {
  margin: 0;
  font-family: 'Apercu', Arial, sans-serif !important;
  font-size: 1rem;
  line-height: 1.3;
  quotes: '“' '”' '‘' '’';
}

.theme-default-content:not(.custom) > h1,
.theme-default-content:not(.custom) > h2
p, ul, ol, table {
  margin: 0;
  padding: 0;
}

.theme-default-content:not(.custom) > h1,
.theme-default-content:not(.custom) > h2 {
  border: none;
}

.theme-default-content:not(.custom) > h1 {
  margin-bottom: .6em;
  font-size: 1.8rem
  line-height: 1.1;
  color: $accentColor;
}

.theme-default-content:not(.custom) > h2 {
  margin-bottom: .3em;
  font-size: 1.2rem;
  line-height: 1.2;
  color: $accentColor;
}

.theme-default-content:not(.custom) p + h2,
.theme-default-content:not(.custom) ul + h2,
.theme-default-content:not(.custom) ol + h2,
.theme-default-content:not(.custom) table + h2 {
  margin-top: 1.5em;
}

hr {
  margin: 0 0 1.4em 0;
}

.page p,
.page ul,
.page ol {
  margin-bottom: 1.4em;
  line-height: 1.4em;
  font-variant-numeric: oldstyle-nums;
}

.page p:last-child,
.page ul:last-child,
.page ol:last-child {
  margin-bottom: 0;
}

.page ul,
.page ol {
  padding: 0;
}

.page li > ul,
.page li > ol {
  margin-top: .66em;
}

.page li {
  margin-bottom: .66em;
}

.page ul li,
.page ol li {
  position relative;
  padding-left: 1.3265em;
}

