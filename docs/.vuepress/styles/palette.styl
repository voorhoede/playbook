.page ul ul > li::before {
  background: none;
  border: 1px solid $textColor;
}

.page ul p + ul {
  margin-top: -.66em;
}

.page ol {
  counter-reset: listnumber;
}

.page ol > li::before {
  counter-increment: listnumber;
  content: counter(listnumber) ".";
  position: absolute;
  margin-left: -1.285em;
  font-size: 1em;
}

table,
img {
  margin-bottom: 1.4em;
}

p img:last-child {
  margin-bottom: 0;
}

thead {
  text-align: left;
}

th,
td {
  line-height: 1.4em;
  font-variant-numeric: oldstyle-nums;
}


th {
  vertical-align: bottom;
}

td {
  vertical-align: top;
}

@media (min-width: 720px) {
  body {
    font-size: 1.125rem;
  }

  .theme-default-content:not(.custom) > h1 {
    margin-bottom: .9em;
    font-size: 1.8rem
    line-height: 1.2;
  }

  .theme-default-content:not(.custom) > h2 {
    margin-bottom: .45em;
    font-size: 1.3rem;
    line-height: 1.2;
  }

  .page p, .page ul, .page ol, th, td {
    margin-bottom: 1.4866em;
    line-height: 1.4866;
  }

  table {
    margin-bottom: 2.2em;
  }

  hr {
    margin-bottom: 1.7em;
  }
}

@media (min-width: 960px) {
  body {
    font-size: 1.3rem;
  }

  .theme-default-content:not(.custom) > h1 {
    margin-bottom: 1.1em;
    font-size: 2rem
    line-height: 1.1;
  }

  .theme-default-content:not(.custom) > h2 {
    margin-bottom: .5em;
    font-size: 1.4rem;
    line-height: 1.2;
  }

  .page p, .page ul, .page ol, th, td {
    margin-bottom: 1.6em;
    line-height: 1.6;
  }

  table {
    margin-bottom: 2.2em;
  }

  hr {
    margin-bottom: 1.9em;
  }
}
