@media (min-width: 720px) {
  .page-nav {
    position: fixed;
    bottom: 0;
    right: 0;
    padding-bottom: spacingHalf;
    width: maxWidthMedium;
    background-color: white;
  }
}

@media (min-width: 960px) {
  .page-edit, .page-nav {
    max-width: maxWidthLarge;
  }

  .page-nav {
    width: maxWidthLarge;
  }

  .page-nav .inner {
    margin: 0 auto;
  }
}
